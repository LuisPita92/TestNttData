@model IEnumerable<ntt.data.test.luis.pita.Models.ClienteModel>
@{
    ViewData["Title"] = "Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-md-6">
            <h3>Lista de Cliente</h3>
        </div>
        <div class="col-md-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Clientes">Agregar cliente</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Persona.Identificacion)</td>
                        <td>@Html.DisplayNameFor(m => m.Persona.Nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.Persona.Direccion)</td>
                        <td>@Html.DisplayNameFor(m => m.Persona.Telefono)</td>
                        <td>@Html.DisplayNameFor(m => m.Estado)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Persona.Identificacion</td>
                            <td>@item.Persona.Nombre</td>
                            <td>@item.Persona.Direccion</td>
                            <td>@item.Persona.Telefono</td>
                            <td align="center">@item.Estado</td>
                            <td>
                                <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="Clientes" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros.</p>
        }
    </div>
</div>
