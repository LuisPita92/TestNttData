@model IEnumerable<ntt.data.test.luis.pita.Models.CuentaModel>
@{
    ViewData["Title"] = "Lista de Cuentas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["Mensaje"] != null)
    {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
    <div class="row">
        <div class="col-md-6">
            <h3>Lista de Cuentas</h3>
        </div>
        <div class="col-md-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Cuentas">Agregar cuenta</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Numero)</td>
                        <td>@Html.DisplayNameFor(m => m.TipoCuenta.Valor)</td>
                        <td>@Html.DisplayNameFor(m => m.Cliente.Persona.Nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.Saldo)</td>
                        <td>@Html.DisplayNameFor(m => m.Estado)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Numero</td>
                        <td>@item.TipoCuenta.Valor</td>
                        <td>@item.Cliente.Persona.Nombre</td>
                        <td align="right">@item.Saldo.ToString("0.00")</td>
                        <td align="center">@item.Estado</td>
                        <td>
                            <a asp-controller="Cuentas" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Cuentas" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros.</p>
        }
    </div>
</div>
